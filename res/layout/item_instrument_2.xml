<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:id="@+id/item_instrument"
    android:background="@drawable/border"
    android:layout_marginTop="5dp">
    
    <LinearLayout         
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/gray_white"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/instrument_4">
        <TextView 
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/c_dizi"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="笛子"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    
    <LinearLayout         
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/gray_white"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/instrument_5">
        <TextView 
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/c_gu"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="鼓"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    
    <LinearLayout         
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/gray_white"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/instrument_6">
        <TextView 
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/c_xiaohao"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="小号"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    

</LinearLayout>
