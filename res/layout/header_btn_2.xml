<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:background="@color/header_btn_yellow" >
	
    <!-- 视听训练 -->
    <LinearLayout 
        android:id="@+id/btn_shiting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" 
        android:gravity="center_horizontal"
        android:onClick="shitingClick"  >
        <TextView 
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/header_shiting"
            android:layout_weight="0"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视听训练"
            android:gravity="bottom"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- 定制 -->
    <LinearLayout 
        android:id="@+id/btn_dingzhi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" 
        android:gravity="center_horizontal"
        android:onClick="dingzhiClick"     >
        <TextView 
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/header_dingzhi"
            android:layout_weight="0"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定制"
            android:gravity="bottom"
            android:layout_weight="1"/>
    </LinearLayout>
    
	<!-- 占位置 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" 
        android:gravity="center_horizontal"    >
        <TextView 
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_weight="1"/>
    </LinearLayout>      

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" 
        android:gravity="center_horizontal"    >
        <TextView 
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_weight="1"/>
    </LinearLayout>    

</LinearLayout>
